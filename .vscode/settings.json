{
    // Editor Core Settings
    "editor.detectIndentation": false,
    "editor.indentSize": "tabSize",
    "editor.wordWrap": "on",
    "editor.rulers": [120],
    "editor.tabCompletion": "on",
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelZoom": true,
    "files.autoSave": "afterDelay",
    "files.restoreUndoStack": false,

    // Editor Visual Enhancements
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.linkedEditing": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",

    // Suggestion and IntelliSense
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.showStatusBar": true,
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
        "comments": true,
        "other": true,
        "strings": true
    },

    // File Management and Exclusions
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.venv/**": true,
        "**/node_modules/**": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/.git": true,
        "**/.venv": true,
        "**/node_modules": true
    },

    // Workbench and UI
    "workbench.productIconTheme": "bongocat",
    "workbench.startupEditor": "none",
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.editorAssociations": {
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },

    // Theme and Color Customizations
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["string.quoted.docstring.multi.python"],
                "settings": {
                    "foreground": "#88846F"
                }
            }
        ]
    },
    "window.systemColorTheme": "dark",

    // Terminal Settings
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.scrollback": 10000,

    // Explorer Settings
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "remote-explorer.foldersSortOrder": "alphabetical",

    // Search Configuration
    "search.quickOpen.includeHistory": false,
    "search.sortOrder": "type",

    // Error Handling and Diagnostics
    "problems.showCurrentInStatus": true,
    "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
    "errorLens.exclude": ["unnecessary code"],

    // Security and Telemetry
    "telemetry.telemetryLevel": "off",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.autoUpdate": false,

    // Git Configuration
    "git.enableSmartCommit": true,
    "git.ignoreRebaseWarning": true,
    "git.openRepositoryInParentFolders": "never",

    // Python Specific Settings
    "Python_Config.pythonVersion": "3.12",
    "python.terminal.executeInFileDir": true,
    "python.venvFolders": [".venv"],
    "ruff.configuration": "pyproject.toml",
    "ruff.importStrategy": "useBundled",

    // AREPL Settings
    "AREPL.skipLandingPage": true,
    "AREPL.whenToExecute": "onSave",

    // Formatting Settings
    "prettier.tabWidth": 4,
    "notebook.output.textLineLimit": 60,

    // Language Specific Settings
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.fixAll.ruff": "always",
            "source.organizeImports": "always",
            "source.organizeImports.ruff": "always"
        },
        "editor.copyWithSyntaxHighlighting": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.dragAndDrop": true,
        "editor.inlayHints.enabled": "on",
        "editor.matchBrackets": "always",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "diffEditor.wordWrap": "on",
        
    }
}
